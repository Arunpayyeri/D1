<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MaterialGray200">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="110dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txttit"
    android:layout_marginTop="10dp"
    android:text="Book your favourite hotels from "
    android:textColor="#fff"
    android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttit"
            android:text="anywhere and any time"
            android:textColor="#fff"
            android:gravity="center"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="70dp"
    android:paddingEnd="@dimen/margin_4"
    android:paddingLeft="@dimen/margin_4"
    android:paddingRight="@dimen/margin_4"
    android:paddingStart="@dimen/margin_4">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8">

            <ImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="@dimen/margin_60"
                android:layout_height="@dimen/margin_60"
                android:contentDescription="@null"
                android:visibility="gone"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_alignTop="@+id/imageViewIcon"
                android:layout_toRightOf="@+id/imageViewIcon"
                android:layout_toEndOf="@+id/imageViewIcon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Al Khobar, Saudi Arabia"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSize_16"/>

                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/textViewName"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="check in 5Apr, Thu chek out 6Apr, Fri"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize_14"/>

                <TextView
                    android:id="@+id/textViewMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewStatus"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize_14"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_weight=".5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="02"
                        android:textSize="15dp"
                        android:layout_weight=".5"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:layout_marginTop="210dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin_4"
            android:paddingLeft="@dimen/margin_4"
            android:paddingRight="@dimen/margin_4"
            android:paddingStart="@dimen/margin_4" />

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_gravity="bottom"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/btnfind"
            android:layout_weight=".5"
            android:text="Find"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/btnbook"
            android:layout_weight=".5"
            android:text="Booking"/>
    </LinearLayout>


</LinearLayout>

</android.support.design.widget.CoordinatorLayout>